<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CDOWin.Views.Employers.EmployersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:employers="using:CDO.Core.DTOs.Employers"
    mc:Ignorable="d">

    <Grid>
        <!-- Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="336"/>
        </Grid.ColumnDefinitions>

        <!-- Left Column -->
        <Grid Style="{StaticResource ContentRightBorderStyle}">
            
            <!-- Rows -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <!-- Columns -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource PageTitleStyle}"
                       Text="Employers"/>

            <!-- CommandBar -->
            <CommandBar Grid.Row="0" Grid.Column="1" DefaultLabelPosition="Collapsed" Background="Transparent">
                <AppBarButton Width="56" Click="NewEmployer_ClickAsync" IsCompact="False" ToolTipService.ToolTip="New Employer">
                    <FontIcon Glyph="&#xE710;" Style="{StaticResource SingleIconFontStyle}"/>
                </AppBarButton>
            </CommandBar>

            <!-- Search Bar -->
            <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                     Margin="8,0,8,8" PlaceholderText="Filter Employers"
                     Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Employers Table -->
            <ListView Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" x:Name="ListView"
                      Style="{StaticResource DataTableStyle}" 
                      ItemsSource="{x:Bind ViewModel.Filtered, Mode=OneWay}" 
                      SelectedItem="{x:Bind ViewModel.SelectedSummary, Mode=TwoWay}" 
                      ItemClick="ListView_ItemClick">

                <!-- Header -->
                <ListView.Header>
                    <Grid Style="{StaticResource DataTableHeaderStyle}">

                        <interactivity:Interaction.Behaviors>
                            <behaviors:StickyHeaderBehavior/>
                        </interactivity:Interaction.Behaviors>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="180"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Employer" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="1" Text="Address" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="2" Text="Phone" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="3" Text="Supervisor" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="4" Text="Website" FontWeight="SemiBold"/>
                    </Grid>
                </ListView.Header>

                <!-- Content -->
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="employers:EmployerSummary">
                        <Grid Padding="12,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="180"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{x:Bind Name}" TextWrapping="WrapWholeWords" 
                                       FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Text="{x:Bind FormattedAddress}" TextTrimming="CharacterEllipsis"/>
                            <TextBlock Grid.Column="2" Text="{x:Bind Phone}"/>
                            <TextBlock Grid.Column="3" Text="{x:Bind FormattedSupervisor}" TextWrapping="WrapWholeWords"/>
                            <TextBlock Grid.Column="4" Text="{x:Bind Website}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Row 2: Status Bar -->
            <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
              Background="{ThemeResource LayerOnMicaBaseAltFillColorDefaultBrush}">
                <StackPanel Orientation="Horizontal" Spacing="8" 
                            VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Style="{StaticResource PageSubtitleStyle}" Margin="0">
                        <Run Text="{x:Bind ViewModel.Filtered.Count, Mode=OneWay}"/>
                        <Run Text="Employers"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Right Column -->
        <Frame Grid.Column="1" x:Name="InspectorFrame" IsNavigationStackEnabled="False"/>
    </Grid>
</Page>