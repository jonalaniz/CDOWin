<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CDOWin.Views.Dialogs.UpdateArrangements"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CDOWin.Views.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CDOWin.Controls" 
    xmlns:models="using:CDO.Core.Models" 
    xmlns:dialogs="using:CDOWin.Views.Dialogs"
    d:DataContext="{d:DesignInstance Type=models:Client}"
    mc:Ignorable="d">

    <Grid Width="480" RowSpacing="10" ColumnSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Row 0: Employment Goals -->
        <controls:LabeledMultiLinePair Grid.Row="0" Grid.Column="0" 
                                       Label="Employment Goals" Value="{Binding employmentGoal}"
                                       TextBoxTag="{x:Bind dialogs:ArrangementsField.EmploymentGoal}"
                                       TextChangedForwarded="LabeledTextBox_TextChangedForwarded"/>

        <!-- Row 1: Conditions -->
        <controls:LabeledMultiLinePair Grid.Row="1" Grid.Column="0" 
                                       Label="Conditions" Value="{Binding conditions}"
                                       TextBoxTag="{x:Bind dialogs:ArrangementsField.Conditions}"
                                       TextChangedForwarded="LabeledTextBox_TextChangedForwarded"/>
    </Grid>
</Page>
