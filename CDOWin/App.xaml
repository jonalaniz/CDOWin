<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="CDOWin.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:CDOWin.Converters"
    xmlns:local="using:CDOWin">
    <Application.Resources>
        <ResourceDictionary>
            <converters:NullOpacityConverter x:Key="NullOpacityConverter"/>
            <converters:StringNullVisibilityConverter x:Key="StringToVisability"/>
            <converters:NullVisibilityConverter x:Key="NullToVisability"/>

            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <ImageBrush x:Key="SplashBackgroundBrush" 
                                ImageSource="Assets/CDO_Light.png" 
                                Stretch="UniformToFill"/>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <ImageBrush x:Key="SplashBackgroundBrush" 
                                ImageSource="Assets/CDO_Dark.png" 
                                Stretch="UniformToFill"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="/Resources/Styles.xaml"/>
                <ResourceDictionary Source="/Resources/Grids.xaml"/>
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
        </ResourceDictionary>
    </Application.Resources>
</Application>
