<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CDOWin.Views.Clients.ClientsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:CDOWin.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:viewmodels="using:CDOWin.ViewModels"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:dto="using:CDO.Core.DTOs"
    mc:Ignorable="d">

    <Grid>
        <!-- Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="344"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Column -->
        <Grid Style="{StaticResource ContentRightBorderStyle}">
            
            <!-- Rows -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Columns -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Title + Button Bar -->
            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                
                <!-- Title + Button -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Title -->
                    <TextBlock Grid.Column="0" Style="{StaticResource PageTitleStyle}"
                               Text="Clients"/>
                    
                    <!-- Add Button -->
                    <Button Grid.Column="1" VerticalAlignment="Center" 
                            Style="{StaticResource SingleIconButtonStyle}"
                            ToolTipService.ToolTip="New Client">
                        <FontIcon Glyph="&#xE710;" Style="{StaticResource SingleIconFontStyle}"/>
                    </Button>
                </Grid>
                
                <!-- Subtitle -->
                <TextBlock Style="{StaticResource PageSubtitleStyle}">
                    <Run Text="{x:Bind ViewModel.Filtered.Count, Mode=OneWay}"/>
                    <Run Text="Clients"/>
                </TextBlock>
            </StackPanel>
            
            <!-- Search Bar -->
            <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                     Margin="8, 0, 8, 8" PlaceholderText="Filter clients"
                     Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Clients List -->
            <ListView Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                      HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                      SelectedItem="{x:Bind ViewModel.SelectedSummary, Mode=TwoWay}"
                      ItemsSource="{x:Bind ViewModel.Filtered, Mode=OneWay}"
                      IsItemClickEnabled="True"
                      ItemClick="ListView_ItemClick">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="dto:ClientSummaryDTO">
                        <Grid Margin="0,8,8,8">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" FontWeight="Bold"
                                       Text="{x:Bind Name}"
                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Grid.Row="1" TextWrapping="WrapWholeWords"
                                       Text="{x:Bind FormattedAddress}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>


        <!-- Middle Column -->
        <Frame Grid.Column="1"
               x:Name="ClientFrame" 
               IsNavigationStackEnabled="False"/>

        <!-- Right Column -->
        <Frame Grid.Column="2"
                x:Name="InspectorFrame" 
                IsNavigationStackEnabled="False"/>
    </Grid>
</Page>
