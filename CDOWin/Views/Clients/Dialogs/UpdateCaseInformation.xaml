<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CDOWin.Views.Clients.Dialogs.UpdateCaseInformation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CDOWin.Controls"
    xmlns:local="using:CDOWin.Views.Clients.Dialogs"
    mc:Ignorable="d">

    <Grid Width="480" RowSpacing="10" ColumnSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Row 0: Start Date/Case ID/Status -->
        <CalendarDatePicker Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                            x:Name="StartDatePicker" Header="Start Date" HorizontalAlignment="Stretch"
                            DateChanged="StartDatePicker_DateChanged"/>
        
        <TextBox Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" Header="Case ID" 
                 Text="{x:Bind ViewModel.OriginalClient.CaseID}" Tag="{x:Bind local:CaseField.CaseID}"
                 TextChanged="TextBox_TextChanged"/>
        <StackPanel Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2" Spacing="8">
            <TextBlock Text="Tier"/>
            <DropDownButton x:Name="StatusDropDown"
                            HorizontalContentAlignment="Left" HorizontalAlignment="Stretch"/>
        </StackPanel>

        <!-- Row 1: Benefits/Premiums -->
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Spacing="8">
            <TextBlock Text="Benefits"/>
            <DropDownButton x:Name="BenefitDropDown"
                            HorizontalContentAlignment="Left" HorizontalAlignment="Stretch"/>
        </StackPanel>
        <TextBox Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="4" Header="Premiums" 
                 Text="{x:Bind ViewModel.OriginalClient.Premiums}" Tag="{x:Bind local:CaseField.Premiums}"
                 TextChanged="TextBox_TextChanged"
                 MaxLength="255"/>
        
        <!-- Row 2: Counselor -->
        <AutoSuggestBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="6" Header="Counselor"
                        PlaceholderText="Type to search Counselors"
                        x:Name="CounselorAutoSuggest" TextMemberPath="Name" 
                        TextChanged="CounselorAutoSuggest_TextChanged"
                        QuerySubmitted="CounselorAutoSuggest_QuerySubmitted"
                        SuggestionChosen="CounselorAutoSuggest_SuggestionChosen">
        </AutoSuggestBox>
        
        <!-- Row 3: Counselor Information -->
        <controls:LabelPair Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                            Label="Counselor Phone" x:Name="CPhone"
                            Value="{x:Bind ViewModel.OriginalClient.CounselorReference.Phone}"/>
        <controls:LabelPair Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="4"
                            Label="Counselor Email" x:Name="CEmail"
                            Value="{x:Bind ViewModel.OriginalClient.CounselorReference.Email}"/>

    </Grid>
</Page>
