<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CDOWin.Views.Placements.Inspectors.PlacementInspector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CDOWin.Views.Placements.Inspectors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:CDOWin.ViewModels"
    xmlns:c="using:CDOWin.Controls"
    mc:Ignorable="d">

    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Grid.Column="0" 
                   Style="{StaticResource InspectorHeaderStyle}"
                   Text="{x:Bind ViewModel.Selected.ClientName, Mode=OneWay}"/>
        
        <!-- Edit Button -->
        <Button Grid.Row="0" Grid.Column="1" VerticalAlignment="Top"
                Click="EditButton_Click"
                Style="{StaticResource SingleIconButtonStyle}"
                ToolTipService.ToolTip="Edit"
                Click="EditButton_Click">
            <FontIcon Glyph="&#xE70F;" Style="{StaticResource SingleIconFontStyle}"/>
        </Button>

        <!-- Details Caption -->
        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                   Style="{StaticResource InspectorCaptionStyle}" Text="Details"/>

        <!-- Detials Grid -->
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"  
              Style="{StaticResource InspectorDetialsGridStyle}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Row 0: Placement + Active -->
            <c:LabelPair Grid.Row="0" Grid.Column="0" Label="Placement" 
                         Value="{x:Bind ViewModel.Selected.PlacementNumber, Mode=OneWay}"/>
            <c:LabelPair Grid.Row="0" Grid.Column="1" Label="Active" 
                         Value="{x:Bind ViewModel.Selected.Active, Mode=OneWay}"/>

            <!-- Row 1: Employer -->
            <c:LabelPair Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Label="Employer" 
                         Value="{x:Bind ViewModel.Selected.Employer.Name, Mode=OneWay}"/>
            
            <!-- Row 2: Counselor -->
            <c:LabelPair Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Label="Counselor" 
                         Value="{x:Bind ViewModel.Selected.CounselorName, Mode=OneWay}"/>

            <!-- Row 3: PO number + Employer ID -->
            <c:LabelPair Grid.Row="3" Grid.Column="0" Label="SA ID" 
                         Value="{x:Bind ViewModel.Selected.PoNumber, Mode=OneWay}"/>
            <c:LabelPair Grid.Row="3" Grid.Column="1" Label="Employer ID" 
                         Value="{x:Bind ViewModel.Selected.EmployerID, Mode=OneWay}"/>

            <!-- Row 4: Supervisor -->
            <c:LabelPair Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Label="Supervisor" 
                         Value="{x:Bind ViewModel.Selected.FormattedSupervisor, Mode=OneWay}"/>
            
            <!-- Row 5: Position -->
            <c:LabelPair Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Label="Position" 
                         Value="{x:Bind ViewModel.Selected.Position, Mode=OneWay}"/>

            <!-- Row 6: Salary + Days on Job -->
            <c:LabelPair Grid.Row="6" Grid.Column="0" Label="Salary" 
                         Value="{x:Bind ViewModel.Selected.FormattedSalary, Mode=OneWay}"/>
            <c:LabelPair Grid.Row="6" Grid.Column="1" Label="Days on Job" 
                         Value="{x:Bind ViewModel.Selected.DaysOnJob, Mode=OneWay}"/>

            <!-- Row 7: Hire Date + End Date -->
            <c:LabelPair Grid.Row="7" Grid.Column="0" Label="Hire Date" 
                         Value="{x:Bind ViewModel.Selected.FormattedHireDate, Mode=OneWay}"/>
            <c:LabelPair Grid.Row="7" Grid.Column="1" Label="End Date" 
                         Value="{x:Bind ViewModel.Selected.FormattedEndDate, Mode=OneWay}"/>
        </Grid>

        <!-- Row 5: Button Row -->
        <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
              Style="{StaticResource InspectorButtonGridStyle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Style="{StaticResource InspectorAccentStyle}">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <SymbolIcon Symbol="Page"/>
                    <TextBlock Text="Export to Form"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Page>
