<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CDOWin.Views.ServiceAuthorizations.ServiceAuthorizationsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CDOWin.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:viewmodels="using:CDOWin.ViewModels"
    xmlns:models="using:CDO.Core.Models"
    mc:Ignorable="d">

    <Grid>
        <!-- Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="336"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Column -->
        <Grid Style="{StaticResource ContentRightBorderStyle}">
            
            <!-- Rows -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <!-- Columns -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource PageTitleStyle}"
                       Text="Service Authorizations"/>

            <!-- CommandBar -->
            <CommandBar Grid.Row="0" Grid.Column="1" DefaultLabelPosition="Collapsed" Background="Transparent">
                <AppBarToggleButton Width="56" IsChecked="{x:Bind ViewModel.IsFiltered, Mode=TwoWay}" IsCompact="False" ToolTipService.ToolTip="Filter SAs">
                    <FontIcon Glyph="&#xE71C;" Foreground="{x:Bind ViewModel.IsFiltered, Mode=OneWay, Converter={StaticResource BoolSolidBrushConverter}}"/>
                </AppBarToggleButton>
            </CommandBar>

            <!-- Search Bar -->
            <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                     Margin="8,0,8,8" PlaceholderText="Filter Service Authorizations"
                     Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- ServiceAuthorizations Table -->
            <ListView Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" x:Name="ListView" 
                      Style="{StaticResource DataTableStyle}" 
                      ItemsSource="{x:Bind ViewModel.Filtered, Mode=OneWay}" 
                      SelectedItem="{x:Bind ViewModel.SelectedSummary, Mode=TwoWay}" 
                      ItemClick="ListView_ItemClick">

                <!-- Header -->
                <ListView.Header>
                    <Grid Style="{StaticResource DataTableHeaderStyle}">

                        <interactivity:Interaction.Behaviors>
                            <behaviors:StickyHeaderBehavior/>
                        </interactivity:Interaction.Behaviors>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="220"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="220"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="350"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="SA Number" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="1" Text="Client" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="2" Text="Case ID" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="3" Text="Issued By" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="4" Text="Start Date" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="5" Text="End Date" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="6" Text="Unit Cost" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="7" Text="Description" FontWeight="SemiBold"/>
                    </Grid>
                </ListView.Header>

                <!-- Content -->
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Invoice">
                        <Grid Padding="12,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="350"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{x:Bind ServiceAuthorizationNumber}"/>
                            <Grid Grid.Column="1" Margin="0,0,12,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="{x:Bind ClientName}" TextWrapping="WrapWholeWords" FontWeight="Bold"/>
                                <Button Grid.Column="1" Style="{StaticResource AccentButtonStyle}"
                                        IsEnabled="{x:Bind ClientID, Converter={StaticResource NullToBoolConverter}}"
                                        Click="GoToClient_Click" Tag="{x:Bind ClientID}">
                                    <FontIcon Glyph="&#xE76C;"/>
                                </Button>
                            </Grid>
                            <TextBlock Grid.Column="2" Text="{x:Bind CaseID}"/>
                            <Grid Grid.Column="3" Margin="0,0,12,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="{x:Bind CounselorName}" TextWrapping="WrapWholeWords" FontWeight="Bold"/>
                                <Button Grid.Column="1" Style="{StaticResource AccentButtonStyle}"
                                        IsEnabled="{x:Bind CounselorID, Converter={StaticResource NullToBoolConverter}}"
                                        Click="GoToCounselor_Click" Tag="{x:Bind CounselorID}">
                                    <FontIcon Glyph="&#xE76C;"/>
                                </Button>
                            </Grid>
                            <TextBlock Grid.Column="4" Text="{x:Bind FormattedStartDate}"/>
                            <TextBlock Grid.Column="5" Text="{x:Bind FormattedEndDate}"/>
                            <TextBlock Grid.Column="6" Text="{x:Bind FormattedCost}"/>
                            <TextBlock Grid.Column="7" Text="{x:Bind Description}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Row 2: Status Bar -->
            <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                  Background="{ThemeResource LayerOnMicaBaseAltFillColorDefaultBrush}">
                <StackPanel Orientation="Horizontal" Spacing="8" 
                            VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Style="{StaticResource PageSubtitleStyle}" Margin="0">
                        <Run Text="{x:Bind ViewModel.Filtered.Count, Mode=OneWay}"/>
                        <Run Text="Service Authorizations"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Grid>
        
        <!-- Right Column -->
        <Frame Grid.Column="1" x:Name="InspectorFrame" IsNavigationStackEnabled="False"/>
    </Grid>
</Page>
