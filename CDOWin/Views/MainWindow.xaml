<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="CDOWin.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CDOWin.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:CDOWin.Views"
    mc:Ignorable="d"
    Title="CDOWin">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="BaseAlt"/>
    </Window.SystemBackdrop>

    <Grid>
        <!-- Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Title Bar -->
        <TitleBar Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                  Title="CDO Win" Subtitle="Beta"
                  IsBackButtonVisible="False"
                  IsPaneToggleButtonVisible="False"/>

        <!-- Left Column: Sidebar -->
        <Frame Grid.Row="1" Grid.Column="0" Width="324" Padding="4,0,4,0"
               x:Name="SidebarFrame" IsNavigationStackEnabled="False"/>

        <!-- Right Column: Selector + Content -->
        <Grid Grid.Row="1" Grid.Column="1">

            <!-- Right Column Rows -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Right Column Colums -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <NavigationView Grid.Column="0" Grid.Row="0" Margin="0,0,0,-2"
                            x:Name="NavigationBar" IsBackButtonVisible="Collapsed" IsSettingsVisible="False"
                            PaneDisplayMode="Top">
                <NavigationView.MenuItems>
                    <NavigationViewItem Content="Clients" Tag="{x:Bind views:CDOFrame.Clients}"/>
                    <NavigationViewItem Content="Counselors" Tag="{x:Bind views:CDOFrame.Counselors}"/>
                    <NavigationViewItem Content="Employers" Tag="{x:Bind views:CDOFrame.Employers}"/>
                    <NavigationViewItemSeparator/>
                    <NavigationViewItem Content="Service Authorizations" Tag="{x:Bind views:CDOFrame.ServiceAuthorizations}"/>
                    <NavigationViewItem Content="Placements" Tag="{x:Bind views:CDOFrame.Placements}"/>
                </NavigationView.MenuItems>
            </NavigationView>

            <Border Grid.Row="1" Grid.ColumnSpan="2"
                    BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                    BorderThickness="1" CornerRadius="8, 0, 0, 0"
                    Background="{ThemeResource LayerFillColorDefaultBrush}">
                <Frame x:Name="ContentFrame" IsNavigationStackEnabled="False"/>
            </Border>
        </Grid>
    </Grid>
</Window>
