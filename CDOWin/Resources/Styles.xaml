<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Basic Card Container Border Style -->
    <Style x:Key="BasicCardBorderStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="BorderBrush" Value="{ThemeResource DividerStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
    </Style>
    
    <!-- Basic Card Container Grid Style -->
    <Style x:Key="BasicCardContainerGridStyle" TargetType="Grid">
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="BorderBrush" Value="{ThemeResource DividerStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
        <Setter Property="Padding" Value="14,5,14,8"/>
    </Style>

    <!-- Card Container Grid Style -->
    <Style x:Key="CardContainerGridStyle" TargetType="Grid">
        <Setter Property="Width" Value="300"/>
        <Setter Property="Height" Value="320"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="BorderBrush" Value="{ThemeResource DividerStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
    </Style>

    <!-- Card Inner Grid Style -->
    <Style x:Key="CardInnerGridStyle" TargetType="Grid">
        <Setter Property="Margin" Value="14,6,6,14"/>
        <Setter Property="ColumnSpacing" Value="12"/>
        <Setter Property="RowSpacing" Value="10"/>
    </Style>

    <!-- Checklists Card Inner Grid Style -->
    <Style x:Key="Checklists CardInnerGridStyle" TargetType="Grid">
        <Setter Property="Margin" Value="16,10,16,16"/>
        <Setter Property="ColumnSpacing" Value="12"/>
        <Setter Property="RowSpacing" Value="4"/>
    </Style>

    <!-- Label Text Block Style -->
    <Style x:Key="LabelTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,0,0,1"/>
    </Style>

    <!-- Value Text Block Style -->
    <Style x:Key="ValueTextBlockStyle" TargetType="TextBlock">
        <Setter Property="TextWrapping" Value="WrapWholeWords"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
    </Style>

    <!-- Left Checkbox Style -->
    <Style x:Key="LeftCheckboxStyle" TargetType="CheckBox">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
    </Style>

    <!-- Right Checkbox Style -->
    <Style x:Key="RightCheckboxStyle" TargetType="CheckBox">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
    </Style>
    
    <!-- Multi-Line TextBox (Notes, etc.) -->
    <Style x:Key="MultiLineCheckboxStyle" TargetType="TextBox">
        <Setter Property="AcceptsReturn" Value="True"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>
</ResourceDictionary>
