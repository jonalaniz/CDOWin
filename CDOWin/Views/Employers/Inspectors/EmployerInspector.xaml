<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CDOWin.Views.Employers.Inspectors.EmployerInspector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CDOWin.Views.Employers.Inspectors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:CDOWin.ViewModels"
    xmlns:control="using:CDOWin.Controls"
    d:DataContext="{d:DesignInstance Type=viewmodels:EmployersViewModel}"
    mc:Ignorable="d">

    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Grid.Column="0"
                   Style="{StaticResource InspectorHeaderStyle}"
                   Text="{Binding Selected.Name}"/>

        <!-- Edit Button -->
        <Button Grid.Row="0" Grid.Column="2" VerticalAlignment="Top" 
                Style="{StaticResource SingleIconButtonStyle}"
                Click="EditButton_Click"
                ToolTipService.ToolTip="Edit">
            <FontIcon Glyph="&#xE70F;" Style="{StaticResource SingleIconFontStyle}"/>
        </Button>

        <!-- Details Caption -->
        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                   Style="{StaticResource InspectorCaptionStyle}" Text="Details"/>

        <!-- Detials Grid -->
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"  
              Style="{StaticResource InspectorDetialsGridStyle}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Row 0: Address -->
            <control:LabelPair Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                               Label="Address" Value="{Binding Selected.FormattedAddress}"/>

            <!-- Row 1: Phone + Fax -->
            <control:LabelPair Grid.Row="1" Grid.Column="0" Label="Phone" Value="{Binding Selected.Phone}"/>
            <control:LabelPair Grid.Row="1" Grid.Column="1" Label="Fax" Value="{Binding Selected.Fax}"/>

            <!-- Row 2: Email -->
            <control:LabelPair Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                               Label="Email" Value="{Binding Selected.Email}"/>

            <!-- Row 3: Supervisor -->
            <control:LabelPair Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                               Label="Supervisor" Value="{Binding Selected.FormattedSuperviror}"/>
            <!-- Row 4: Notes -->
            <control:LabelPair Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                               Label="Notes" Value="{Binding Selected.Notes}"/>
        </Grid>
    </Grid>
</Page>
