<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="CDOWin.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CDOWin"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="LoginWindow">

    <Window.SystemBackdrop>
        <MicaBackdrop/>
    </Window.SystemBackdrop>

    <Grid>
        <!-- Title Bar -->
        <Grid x:Name="AppTitleBar"
              Height="32"
              VerticalAlignment="Top"
              Background="Transparent" />

        <Grid Padding="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="Server Configuration"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Margin="0,12,0,8"/>

            <TextBlock Grid.Row="1"
                       Text="Please enter your server credentials to continue."
                       TextWrapping="Wrap"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       Margin="0,0,0,24"/>

            <!-- Server Address -->
            <StackPanel Grid.Row="2" 
                        Margin="0,0,0,16">
                <TextBlock Text="Server Address"
                           Margin="0,0,0,4"/>
                <TextBox x:Name="ServerAddressTextBox"
                         PlaceholderText="https://example.com"
                         TextChanged="OnCredentialsChanged"/>
            </StackPanel>

            <!-- API Key -->
            <StackPanel Grid.Row="3" 
                        Margin="0,0,0,16">
                <TextBlock Text="API Key"
                           Margin="0,0,0,4"/>
                <PasswordBox x:Name="ApiKeyPasswordBox"
                             PlaceholderText="Enter your API key"
                             PasswordChanged="OnCredentialsChanged"/>
            </StackPanel>

            <!-- Status Message -->
            <InfoBar x:Name="StatusInfoBar"
                     Grid.Row="4"
                     IsOpen="False"
                     Margin="0,0,0,16"
                     VerticalAlignment="Top"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="5"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Spacing="8">
                <Button x:Name="TestButton"
                        Content="Test Connection"
                        Click="TestButton_Click"
                        IsEnabled="False"
                        Style="{StaticResource AccentButtonStyle}"/>
                <Button x:Name="SaveButton"
                        Content="Save"
                        Click="SaveButton_Click"
                        IsEnabled="False"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
