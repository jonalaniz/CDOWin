<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CDOWin.Resources">

    <!-- Basic Card Container Grid Style -->
    <Style x:Key="BasicCardContainerGridStyle" TargetType="Grid">
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="BorderBrush" Value="{ThemeResource DividerStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
        <Setter Property="Padding" Value="14,5,14,8"/>
    </Style>

    <!-- Card Container Grid Style -->
    <Style x:Key="CardContainerGridStyle" TargetType="Grid">
        <Setter Property="Width" Value="300"/>
        <Setter Property="Height" Value="320"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="BorderBrush" Value="{ThemeResource DividerStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
    </Style>

    <!-- Card Inner Grid Style -->
    <Style x:Key="CardInnerGridStyle" TargetType="Grid">
        <Setter Property="Margin" Value="14,6,6,14"/>
        <Setter Property="ColumnSpacing" Value="12"/>
        <Setter Property="RowSpacing" Value="10"/>
    </Style>

    <!-- Checklists Card Inner Grid Style -->
    <Style x:Key="ChecklistsCardInnerGridStyle" TargetType="Grid">
        <Setter Property="Margin" Value="16,10,16,16"/>
        <Setter Property="ColumnSpacing" Value="12"/>
        <Setter Property="RowSpacing" Value="4"/>
    </Style>

    <!-- Content Right Border Style -->
    <Style x:Key="ContentRightBorderStyle" TargetType="Grid">
        <Setter Property="BorderThickness" Value="0,0,1,0"/>
        <Setter Property="BorderBrush" Value="{ThemeResource DividerStrokeColorDefaultBrush}"/>
    </Style>

    <!-- Inspector Details Grid Style -->
    <Style x:Key="InspectorDetialsGridStyle" TargetType="Grid" BasedOn="{StaticResource BasicCardContainerGridStyle}">
        <Setter Property="Margin" Value="12,0,12,8"/>
        <Setter Property="RowSpacing" Value="12"/>
        <Setter Property="Padding" Value="12,8,16,12"/>
    </Style>

    <!-- Inspector Button Grid Style -->
    <Style x:Key="InspectorButtonGridStyle" TargetType="Grid">
        <Setter Property="ColumnSpacing" Value="12"/>
        <Setter Property="Margin" Value="12,4,12,4"/>
    </Style>

</ResourceDictionary>
