<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CDOWin.Views.ServiceAuthorizations.ServiceAuthorizationsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CDOWin.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:viewmodels="using:CDOWin.ViewModels"
    xmlns:models="using:CDO.Core.Models"
    d:DataContext="{d:DesignInstance Type=viewmodels:ServiceAuthorizationsViewModel}"
    mc:Ignorable="d">

    <Grid>
        <!-- Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="344"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Column -->
        <Grid Style="{StaticResource ContentRightBorderStyle}">
            
            <!-- Rows -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Columns -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Title + Button -->
            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Title -->
                    <TextBlock Grid.Column="0" Style="{StaticResource PageTitleStyle}"
                               Text="Service Authorizations"/>

                    <!-- Add Button -->
                    <Button Grid.Column="1" VerticalAlignment="Center" 
                            Style="{StaticResource SingleIconButtonStyle}">
                        <FontIcon Glyph="&#xE710;" Style="{StaticResource SingleIconFontStyle}"/>
                    </Button>
                </Grid>

                <!-- Subtitle -->
                <TextBlock Style="{StaticResource PageSubtitleStyle}">
                    <Run Text="{x:Bind ViewModel.Filtered.Count, Mode=OneWay}"/>
                    <Run Text="Service Authorizations"/>
                </TextBlock>
            </StackPanel>

            <!-- Search Bar -->
            <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                     Margin="8,0,8,8" PlaceholderText="Filter Service Authorizations"
                     Text="{Binding SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- ServiceAuthorizations Table -->
            <ListView Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" x:Name="ListView"
                      Style="{StaticResource DataTableStyle}" ItemsSource="{Binding Filtered}" 
                      SelectedItem="{Binding Selected, Mode=TwoWay}" ItemClick="ListView_ItemClick">

                <!-- Header -->
                <ListView.Header>
                    <Grid Style="{StaticResource DataTableHeaderStyle}">

                        <interactivity:Interaction.Behaviors>
                            <behaviors:StickyHeaderBehavior/>
                        </interactivity:Interaction.Behaviors>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="SA Number" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="1" Text="Client" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="2" Text="Case ID" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="3" Text="Issued By" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="4" Text="Start Date" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="5" Text="End Date" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="6" Text="Unit Cost" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="7" Text="Description" FontWeight="SemiBold"/>
                    </Grid>
                </ListView.Header>

                <!-- Content -->
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:ServiceAuthorization">
                        <Grid Padding="12,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{x:Bind id}"/>
                            <TextBlock Grid.Column="1" Text="{x:Bind client.name}" TextWrapping="WrapWholeWords" FontWeight="Bold"/>
                            <TextBlock Grid.Column="2" Text="{x:Bind client.caseID}"/>
                            <TextBlock Grid.Column="3" Text="{x:Bind client.counselorReference.name}" TextWrapping="WrapWholeWords" FontWeight="Bold"/>
                            <TextBlock Grid.Column="4" Text="{x:Bind formattedStartDate}"/>
                            <TextBlock Grid.Column="5" Text="{x:Bind formattedEndDate}"/>
                            <TextBlock Grid.Column="6" Text="{x:Bind formattedCost}"/>
                            <TextBlock Grid.Column="7" Text="{x:Bind description}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        
        <!-- Right Column -->
        <Frame Grid.Column="1" x:Name="InspectorFrame" IsNavigationStackEnabled="False"/>
    </Grid>
</Page>
