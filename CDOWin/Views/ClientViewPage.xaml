<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CDOWin.Views.ClientViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:CDOWin.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:CDOWin.ViewModels" 
    xmlns:models="using:CDO.Core.Models"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    d:DataContext="{d:DesignInstance Type=viewmodels:ClientsViewModel}"
    mc:Ignorable="d">

    <Grid BorderThickness="0, 0, 1, 0"
          BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="{Binding SelectedClient.name}"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="16,8,8,8"/>
        <Button Grid.Row="0" Grid.Column="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Width="32"
                Height="32"
                Padding="0"
                Margin="16,8,16,11"
                Style="{StaticResource SubtleButtonStyle}">
            <FontIcon Glyph="&#xE712;"
                      FontSize="16"
                      Foreground="{ThemeResource SystemAccentColor}"/>
            <Button.Flyout>
                <MenuFlyout>
                    <MenuFlyoutItem Text="Edit" Icon="Edit"/>
                    <MenuFlyoutItem Text="Delete" Icon="Delete">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Key="Delete" />
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                </MenuFlyout>
            </Button.Flyout>
        </Button>

        <!-- Scroll Viewwer Content -->
        <ScrollViewer Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
            
            <!-- Wrap Panel -->
            <controls:WrapPanel Orientation="Horizontal"
                                HorizontalSpacing="12"
                                VerticalSpacing="12"
                                Margin="12">

                <!-- Personal Information Card-->
                <Grid Style="{StaticResource CardContainerGridStyle}">
                    
                    <!-- Inner Grid -->
                    <Grid Style="{StaticResource CardInnerGridStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Header -->
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Grid.ColumnSpan="6"
                                   Text="Personal Information"
                                   Style="{StaticResource SubtitleTextBlockStyle}"/>

                        <!-- Date of Birth/DL/SSN -->
                        <StackPanel Grid.Row="1" Grid.Column="0"
                                    Grid.ColumnSpan="2">
                            <TextBlock Style="{StaticResource LabelTextBlockStyle}"
                                       Text="DOB"/>
                            <TextBlock Style="{StaticResource ValueTextBlockStyle}"
                                       Text="{Binding SelectedClient.formattedDOB}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="2"
                                    Grid.ColumnSpan="2">
                            <TextBlock Style="{StaticResource LabelTextBlockStyle}"
                                       Text="DL/ID"/>
                            <TextBlock Style="{StaticResource ValueTextBlockStyle}"
                                       Text="{Binding SelectedClient.driversLicense}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="4"
                                    Grid.ColumnSpan="2">
                            <TextBlock Style="{StaticResource LabelTextBlockStyle}"
                                       Text="SSN"/>
                            <TextBlock Style="{StaticResource ValueTextBlockStyle}"
                                       Text="{Binding SelectedClient.formattedSSN}"/>
                        </StackPanel>

                        <!-- Fluent Languages/Race -->
                        <StackPanel Grid.Row="2" Grid.Column="0"
                                    Grid.ColumnSpan="3">
                            <TextBlock Style="{StaticResource LabelTextBlockStyle}"
                                       Text="Fluent Languages"/>
                            <TextBlock Style="{StaticResource ValueTextBlockStyle}"
                                       Text="{Binding SelectedClient.fluentLanguages}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="3"
                                    Grid.ColumnSpan="3">
                            <TextBlock Style="{StaticResource LabelTextBlockStyle}"
                                       Text="Race"/>
                            <TextBlock Style="{StaticResource ValueTextBlockStyle}"
                                       Text="{Binding SelectedClient.race}"/>
                        </StackPanel>

                        <!-- Address Section -->
                        <StackPanel Grid.Row="3" Grid.Column="0"
                                    Grid.ColumnSpan="6">
                            <TextBlock Style="{StaticResource LabelTextBlockStyle}"
                                       Text="Address"/>
                            <TextBlock Style="{StaticResource ValueTextBlockStyle}"
                                       Text="{Binding SelectedClient.formattedAddress}"/>
                            <TextBlock Style="{StaticResource ValueTextBlockStyle}" 
                                       Text="{Binding SelectedClient.formattedCityStateZip}"/>
                        </StackPanel>
                        


                        <!-- Education Section -->
                        <StackPanel Grid.Row="4" Grid.Column="0"
                                    Grid.ColumnSpan="6">
                            <TextBlock Style="{StaticResource LabelTextBlockStyle}"
                                       Text="Education"/>
                            <TextBlock Style="{StaticResource ValueTextBlockStyle}"
                                       Text="{Binding SelectedClient.education}"
                                       TextWrapping="WrapWholeWords"/>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!-- Case Information Card -->
                <Grid Style="{StaticResource CardContainerGridStyle}">
                    
                    <!-- Inner Grid -->
                    <Grid Style="{StaticResource CardInnerGridStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Header -->
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Grid.ColumnSpan="6"
                                   Text="Case Information"
                                   Style="{StaticResource SubtitleTextBlockStyle}"/>

                        <!-- Start Date/Case ID/Status Section -->
                        <StackPanel Grid.Row="1" Grid.Column="0"
                                    Grid.ColumnSpan="2">
                            <TextBlock Style="{StaticResource LabelTextBlockStyle}"
                                       Text="Start Date"/>
                            <TextBlock Style="{StaticResource ValueTextBlockStyle}"
                                       Text="{Binding SelectedClient.formattedStartDate}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="2"
                                    Grid.ColumnSpan="2">
                            <TextBlock Style="{StaticResource LabelTextBlockStyle}"
                                       Text="Case ID"/>
                            <TextBlock Style="{StaticResource ValueTextBlockStyle}"
                                       Text="{Binding SelectedClient.caseID}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="1" Grid.Column="4"
                                    Grid.ColumnSpan="2">
                            <TextBlock Style="{StaticResource LabelTextBlockStyle}"
                                       Text="Status"/>
                            <TextBlock Style="{StaticResource ValueTextBlockStyle}"
                                       Text="{Binding SelectedClient.status}"/>
                        </StackPanel>

                        <!-- Benefits/Premiums Section -->
                        <StackPanel Grid.Row="2" Grid.Column="0"
                                    Grid.ColumnSpan="2">
                            <TextBlock Style="{StaticResource LabelTextBlockStyle}"
                                       Text="Benefits"/>
                            <TextBlock Style="{StaticResource ValueTextBlockStyle}"
                                       Text="{Binding SelectedClient.benefit}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="2" Grid.Column="2"
                                    Grid.ColumnSpan="4">
                            <TextBlock Style="{StaticResource LabelTextBlockStyle}"
                                       Text="Premiums"/>
                            <TextBlock Style="{StaticResource ValueTextBlockStyle}"
                                       Text="{Binding SelectedClient.premiums}"/>
                        </StackPanel>

                        <!-- Counselor Section -->
                        <StackPanel Grid.Row="3" Grid.Column="0"
                                    Grid.ColumnSpan="6">
                            <TextBlock Style="{StaticResource LabelTextBlockStyle}"
                                       Text="Counselor"/>
                            <TextBlock Style="{StaticResource ValueTextBlockStyle}"
                                       Text="{Binding SelectedClient.counselor}"/>
                            <TextBlock Style="{StaticResource ValueTextBlockStyle}"
                                       Text="{Binding SelectedClient.counselorPhone}"/>
                            <TextBlock Style="{StaticResource ValueTextBlockStyle}"
                                       Text="{Binding SelectedClient.counselorEmail}"/>
                        </StackPanel>

                        <!-- Secretary Section -->
                        <StackPanel Grid.Row="4" Grid.Column="0"
                                    Grid.ColumnSpan="6">
                            <TextBlock Style="{StaticResource LabelTextBlockStyle}"
                                       Text="Secretary"/>
                            <TextBlock Style="{StaticResource ValueTextBlockStyle}"
                                       Text="{Binding SelectedClient.counselor}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
                
                <!-- Conditions/Goals Card -->
                <Grid Style="{StaticResource CardContainerGridStyle}">
                    
                </Grid>

                <!-- Contact Information Card -->
                <Grid Style="{StaticResource CardContainerGridStyle}">
                    
                    <!-- Inner Grid -->
                    <Grid Style="{StaticResource CardInnerGridStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Header -->
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   Text="Contact Information"
                                   Style="{StaticResource SubtitleTextBlockStyle}"/>

                        <!-- Phone 1 -->
                        <FontIcon Grid.Row="1" Grid.Column="0"
                                  Glyph="&#xE717;"/>
                        <StackPanel Grid.Row="1" Grid.Column="1">
                            <TextBlock Style="{StaticResource LabelTextBlockStyle}"
                                       Text="{Binding SelectedClient.phone1Identity}"/>
                            <TextBlock Style="{StaticResource ValueTextBlockStyle}"
                                       Text="{Binding SelectedClient.phone1}"/>
                        </StackPanel>

                        <!-- Phone 2 -->
                        <FontIcon Grid.Row="2" Grid.Column="0"
                                  Glyph="&#xE717;"/>

                        <StackPanel Grid.Row="2" Grid.Column="1">
                            <TextBlock Style="{StaticResource LabelTextBlockStyle}"
                                       Text="{Binding SelectedClient.phone2Identity}"/>
                            <TextBlock Style="{StaticResource ValueTextBlockStyle}"
                                       Text="{Binding SelectedClient.phone2}"/>
                        </StackPanel>

                        <!-- Phone 3 -->
                        <FontIcon Grid.Row="3" Grid.Column="0"
                                  Glyph="&#xE717;"/>

                        <StackPanel Grid.Row="3" Grid.Column="1">
                            <TextBlock Style="{StaticResource LabelTextBlockStyle}"
                                       Text="{Binding SelectedClient.phone3Identity}"/>
                            <TextBlock Style="{StaticResource ValueTextBlockStyle}"
                                       Text="{Binding SelectedClient.phone3}"/>
                        </StackPanel>

                        <!-- Email 1 -->
                        <FontIcon Grid.Row="4" Grid.Column="0"
                                  Glyph="&#xE715;"/>

                        <StackPanel Grid.Row="4" Grid.Column="1">
                            <TextBlock Style="{StaticResource LabelTextBlockStyle}"
                                       Text="{Binding SelectedClient.emailIdentity}"/>
                            <TextBlock Style="{StaticResource ValueTextBlockStyle}"
                                       Text="{Binding SelectedClient.email}"/>
                        </StackPanel>

                        <!-- Email 2 -->
                        <FontIcon Grid.Row="5" Grid.Column="0"
                                  Glyph="&#xE715;"/>

                        <StackPanel Grid.Row="5" Grid.Column="1">
                            <TextBlock Style="{StaticResource LabelTextBlockStyle}"
                                       Text="{Binding SelectedClient.email2Identity}"/>
                            <TextBlock Style="{StaticResource ValueTextBlockStyle}"
                                       Text="{Binding SelectedClient.email2}"/>
                        </StackPanel>
                    </Grid>

                </Grid>
                
                <!-- Checklist Card-->
                <Grid Style="{StaticResource CardContainerGridStyle}">
                    
                    <!-- Inner Grid -->
                    <Grid Style="{StaticResource Checklists CardInnerGridStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Header -->
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   Margin="0,0,0,9"
                                   Text="Checklists"
                                   Style="{StaticResource SubtitleTextBlockStyle}"/>
                        
                        <!-- Resume Section -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="Resume"
                                   FontWeight="Bold"/>
                        <CheckBox Grid.Row="2" Grid.Column="0"
                                  Style="{StaticResource LeftCheckboxStyle}"
                                  Content="Required"
                                  IsChecked="{Binding SelectedClient.resumeRequired}"/>
                        <CheckBox Grid.Row="2" Grid.Column="1"
                                  Style="{StaticResource RightCheckboxStyle}"
                                  Content="Completed"
                                  IsChecked="{Binding SelectedClient.resumeCompleted}"/>

                        <!-- Video Interviews Section -->
                        <TextBlock Grid.Row="3" Grid.Column="0"
                                   Text="Video Interviews"
                                   FontWeight="Bold"/>
                        <CheckBox Grid.Row="4" Grid.Column="0"
                                  Style="{StaticResource LeftCheckboxStyle}"
                                  Content="Required"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                  IsChecked="{Binding SelectedClient.videoInterviewRequired}"/>
                        <CheckBox Grid.Row="4" Grid.Column="1"
                                  Style="{StaticResource RightCheckboxStyle}"
                                  Content="Completed"
                                  IsChecked="{Binding SelectedClient.videoInterviewCompleted}"/>

                        <!-- Releases Section -->
                        <TextBlock Grid.Row="5" Grid.Column="0"
                                   VerticalAlignment="Center"
                                   Text="Releases"
                                   FontWeight="Bold"/>
                        <CheckBox Grid.Row="5" Grid.Column="1"
                                  Style="{StaticResource RightCheckboxStyle}"
                                  Content="Completed"
                                  IsChecked="{Binding SelectedClient.releasesCompleted}"/>

                        <!-- Orientation Section -->
                        <TextBlock Grid.Row="6" Grid.Column="0"
                                   VerticalAlignment="Center"
                                   Text="Orientation"
                                   FontWeight="Bold"/>
                        <CheckBox Grid.Row="6" Grid.Column="1"
                                  Style="{StaticResource RightCheckboxStyle}"
                                  Content="Completed"
                                  IsChecked="{Binding SelectedClient.orientationCompleted}"/>

                        <!-- 1850 Data Sheet Section -->
                        <TextBlock Grid.Row="7"  Grid.Column="0"
                                   VerticalAlignment="Center"
                                   Text="1850 Data Sheet"
                                   FontWeight="Bold"/>
                        <CheckBox Grid.Row="7"  Grid.Column="1"
                                  Style="{StaticResource RightCheckboxStyle}"
                                  Content="Completed"
                                  IsChecked="{Binding SelectedClient.dataSheetCompleted}"/>

                        <!-- Elevator Speech Section -->
                        <TextBlock Grid.Row="8" Grid.Column="0"
                                   VerticalAlignment="Center"
                                   Text="Elevator Speech"
                                   FontWeight="Bold"/>
                        <CheckBox Grid.Row="8" Grid.Column="1"
                                  Click="ElevatorSpeech_Clicked"
                                  Style="{StaticResource RightCheckboxStyle}"
                                  Content="Completed"
                                  IsChecked="{Binding SelectedClient.elevatorSpeechCompleted}"/>
                    </Grid>
                </Grid>
            </controls:WrapPanel>
        </ScrollViewer>
    </Grid>
</Page>
