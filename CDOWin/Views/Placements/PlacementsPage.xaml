<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CDOWin.Views.Placements.PlacementsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:viewmodels="using:CDOWin.ViewModels"
    xmlns:models="using:CDO.Core.Models"
    xmlns:dto="using:CDO.Core.DTOs"
    mc:Ignorable="d">

    <Grid>
        <!-- Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="344"/>
        </Grid.ColumnDefinitions>

        <!-- Left Column -->
        <Grid Style="{StaticResource ContentRightBorderStyle}">

            <!-- Rows -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Columns -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Title + Button -->
            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Title -->
                    <TextBlock Grid.Column="0" Style="{StaticResource PageTitleStyle}"
                               Text="Placements"/>
                </Grid>

                <!-- Subtitle -->
                <TextBlock Style="{StaticResource PageSubtitleStyle}">
                    <Run Text="{x:Bind ViewModel.Filtered.Count, Mode=OneWay}"/>
                    <Run Text="Placements"/>
                </TextBlock>
            </StackPanel>

            <!-- Search Bar -->
            <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                     Margin="8,0,8,8" PlaceholderText="Filter Placements"
                     Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Placements Table -->
            <ListView Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" x:Name="ListView"
                      Style="{StaticResource DataTableStyle}" 
                      ItemsSource="{x:Bind ViewModel.Filtered, Mode=OneWay}"
                      SelectedItem="{x:Bind ViewModel.SelectedSummary, Mode=TwoWay}"
                      ItemClick="ListView_ItemClick">

                <!-- Header -->
                <ListView.Header>
                    <Grid Style="{StaticResource DataTableHeaderStyle}">

                        <interactivity:Interaction.Behaviors>
                            <behaviors:StickyHeaderBehavior/>
                        </interactivity:Interaction.Behaviors>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="90"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Active" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="1" Text="Client" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="2" Text="Employer" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="3" Text="Counselor" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="4" Text="SA Number" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="5" Text="Supervisor" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="6" Text="Supervisor Phone" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="7" Text="Position" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="8" Text="Salary" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="9" Text="Hire Date" FontWeight="SemiBold"/>
                    </Grid>
                </ListView.Header>

                <!-- Content -->
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="dto:PlacementSummaryDTO">
                        <Grid Padding="12,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="90"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{x:Bind Active}"/>
                            <TextBlock Grid.Column="1" Text="{x:Bind ClientName}"  TextWrapping="WrapWholeWords" FontWeight="Bold"/>
                            <TextBlock Grid.Column="2" Text="{x:Bind EmployerName}" TextWrapping="WrapWholeWords" FontWeight="Bold"/>
                            <TextBlock Grid.Column="3" Text="{x:Bind CounselorName}" TextWrapping="WrapWholeWords" FontWeight="Bold"/>
                            <TextBlock Grid.Column="4" Text="{x:Bind SaNumber}" TextTrimming="CharacterEllipsis"/>
                            <TextBlock Grid.Column="5" Text="{x:Bind SupervisorName}" TextTrimming="CharacterEllipsis"/>
                            <TextBlock Grid.Column="6" Text="{x:Bind SupervisorPhone}" TextTrimming="CharacterEllipsis"/>
                            <TextBlock Grid.Column="7" Text="{x:Bind Position}" TextTrimming="CharacterEllipsis"/>
                            <TextBlock Grid.Column="8" Text="{x:Bind FormattedSalary}" TextTrimming="CharacterEllipsis"/>
                            <TextBlock Grid.Column="9" Text="{x:Bind FormattedHireDate}" TextTrimming="CharacterEllipsis"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- Right Column -->
        <Frame Grid.Column="1" x:Name="InspectorFrame" IsNavigationStackEnabled="False"/>
    </Grid>
</Page>
