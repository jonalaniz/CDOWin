<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CDOWin.Views.Counselors.Inspectors.CounselorInspector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CDOWin.Views.Counselors.Inspectors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:CDOWin.ViewModels"
    xmlns:control="using:CDOWin.Controls"
    d:DataContext="{d:DesignInstance Type=viewmodels:CounselorsViewModel}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Grid.Column="0"
                   Style="{StaticResource InspectorHeaderStyle}"
                   Text="{Binding Selected.name}"/>
        
        <!-- Edit Button -->
        <Button Grid.Row="0" Grid.Column="1" VerticalAlignment="Top" 
                Style="{StaticResource SingleIconButtonStyle}"
                Click="EditButton_Click">
            <FontIcon Glyph="&#xE70F;" Style="{StaticResource SingleIconFontStyle}"/>
        </Button>

        <!-- Details Caption-->
        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                   Style="{StaticResource InspectorCaptionStyle}" Text="Details"/>

        <!-- Details Grid -->
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
              Style="{StaticResource InspectorDetialsGridStyle}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Row 0: Email -->
            <control:LabelPair Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                               Label="Email" Value="{Binding Selected.email}"/>
            
            <!-- Row 1: Phone + Fax -->
            <control:LabelPair Grid.Row="1" Grid.Column="0" Label="Phone" Value="{Binding Selected.phone}"/>
            <control:LabelPair Grid.Row="1" Grid.Column="1" Label="Fax" Value="{Binding Selected.fax}"/>
            
            <!-- Row 2: Secretary -->
            <control:LabelPair Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                               Label="Secretary" Value="{Binding Selected.secretaryName}"/>

            <!-- Row 3: Secretary -->
            <control:LabelPair Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                               Label="Secretary Email" Value="{Binding Selected.secretaryEmail}"/>

            <!-- Row 4: Notes -->
            <control:LabelPair Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                               Label="Notes" Value="{Binding Selected.notes}"/>
        </Grid>

        <!-- Row 3: Button -->
        <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
              Style="{StaticResource InspectorButtonGridStyle}">
            <Button Style="{StaticResource InspectorCriticalStyle}"
                    Click="Delete_Click">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <SymbolIcon Symbol="Delete"/>
                    <TextBlock Text="Delete"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Page>
