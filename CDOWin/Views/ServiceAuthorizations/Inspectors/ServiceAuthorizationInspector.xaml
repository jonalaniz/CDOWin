<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CDOWin.Views.ServiceAuthorizations.Inspectors.ServiceAuthorizationInspector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CDOWin.Views.ServiceAuthorizations.Inspectors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:CDOWin.ViewModels"
    xmlns:control="using:CDOWin.Controls"
    mc:Ignorable="d">

    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Style="{StaticResource PageTitleStyle}"
                   Text="{x:Bind ViewModel.Selected.ClientName, Mode=OneWay}"
                   TextWrapping="WrapWholeWords"/>
        
        <!-- CommandBar -->
        <CommandBar Grid.Row="0" Grid.Column="1" DefaultLabelPosition="Collapsed" Background="Transparent">
            <AppBarButton Click="EditButton_Click" IsCompact="False" ToolTipService.ToolTip="Edit">
                <FontIcon Glyph="&#xE70F;" Style="{StaticResource SingleIconFontStyle}"/>
            </AppBarButton>
        </CommandBar>

        <!-- Detials Grid -->
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
              Style="{StaticResource InspectorDetialsGridStyle}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Row 0: PO Number + Case ID-->
            <control:LabelPair Grid.Row="0" Grid.Column="0" 
                               Label="SA Number" Value="{x:Bind ViewModel.Selected.ServiceAuthorizationNumber, Mode=OneWay}"/>
            <control:LabelPair Grid.Row="0" Grid.Column="1" 
                               Label="Case ID" Value="{x:Bind ViewModel.Selected.CaseID, Mode=OneWay}"/>

            <!-- Row 1: Counselor -->
            <control:LabelPair Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                               Label="Issued By" Value="{x:Bind ViewModel.Selected.CounselorName, Mode=OneWay}"/>

            <!-- Row 2: Counselor -->
            <control:LabelPair Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                               Label="Office" Value="{x:Bind ViewModel.Selected.Office, Mode=OneWay}"/>
            
            <!-- Row 3: Start Date + End Date -->
            <control:LabelPair Grid.Row="3" Grid.Column="0" Label="Start Date" Value="{x:Bind ViewModel.Selected.FormattedStartDate, Mode=OneWay}"/>
            <control:LabelPair Grid.Row="3" Grid.Column="1" Label="End Date" Value="{x:Bind ViewModel.Selected.FormattedEndDate, Mode=OneWay}"/>

            <!-- Row 4: Unit Cost -->
            <control:LabelPair Grid.Row="4" Grid.Column="0"
                               Label="Unit Cost" Value="{x:Bind ViewModel.Selected.FormattedCost, Mode=OneWay}"/>
            <control:LabelPair Grid.Row="4" Grid.Column="1"
                               Label="U/M" Value="{x:Bind ViewModel.Selected.UnitOfMeasurement, Mode=OneWay}"/>
            <!-- Row 5: Description -->
            <control:LabelPair Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                               Label="Description" Value="{x:Bind ViewModel.Selected.Description, Mode=OneWay}"/>
        </Grid>

        <!-- Row 5: Button Row -->
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
              Style="{StaticResource InspectorButtonGridStyle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Style="{StaticResource InspectorAccentStyle}"
                    Click="Export_Click">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <SymbolIcon Symbol="Page"/>
                    <TextBlock Text="Invoice"/>
                </StackPanel>
            </Button>

            <Button Grid.Column="1" Style="{StaticResource InspectorCriticalStyle}"
                    Click="Delete_Click">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <SymbolIcon Symbol="Delete"/>
                    <TextBlock Text="Delete..."/>
                </StackPanel>
                <Button.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.ThemeDictionaries>
                            <ResourceDictionary x:Key="Light">
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="{StaticResource SystemFillColorCritical}"/>
                                <SolidColorBrush x:Key="ButtonForegroundPressed" Color="{StaticResource SystemFillColorCritical}"/>
                            </ResourceDictionary>
                            <ResourceDictionary x:Key="Dark">
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="{StaticResource SystemFillColorCritical}"/>
                                <SolidColorBrush x:Key="ButtonForegroundPressed" Color="{StaticResource SystemFillColorCritical}"/>
                            </ResourceDictionary>
                        </ResourceDictionary.ThemeDictionaries>
                    </ResourceDictionary>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Page>
