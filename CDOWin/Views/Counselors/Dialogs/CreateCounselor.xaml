<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CDOWin.Views.Counselors.Dialogs.CreateCounselor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CDOWin.Views.Counselors.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CDOWin.Controls" 
    xmlns:viewModels="using:CDOWin.ViewModels" 
    d:DataContext="{d:DesignInstance Type=viewModels:CreateCounselorViewModel}"
    mc:Ignorable="d">

    <Grid Width="400" RowSpacing="12" ColumnSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Row 0: Name + Email -->
        <controls:LabeledTextBox Grid.Row="0" Grid.Column="0"
                                 Label="Name" Value="{Binding Name}" 
                                 Tag="{x:Bind local:Field.Name}"
                                 TextChangedForwarded="LabeledTextBox_TextChangedForwarded"/>
        <controls:LabeledTextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
                                 Label="Email" Value="{Binding Email}"
                                 Tag="{x:Bind local:Field.Email}"
                                 TextChangedForwarded="LabeledTextBox_TextChangedForwarded"/>

        <!-- Row 1: Phone + Fax -->
        <controls:LabeledTextBox Grid.Row="1" Grid.Column="0" 
                                 Label="Phone" Value="{Binding Phone}"
                                 Tag="{x:Bind local:Field.Phone}"
                                 TextChangedForwarded="LabeledTextBox_TextChangedForwarded"/>
        <controls:LabeledTextBox Grid.Row="1" Grid.Column="1" 
                                 Label="Fax" Value="{Binding Fax}"
                                 Tag="{x:Bind local:Field.Fax}"
                                 TextChangedForwarded="LabeledTextBox_TextChangedForwarded"/>

        <!-- Row 2: Secretary + Secretary Email -->
        <controls:LabeledTextBox Grid.Row="2" Grid.Column="0"
                                 Label="Secretary" Value="{Binding SecretaryName}"
                                 Tag="{x:Bind local:Field.Secretary}"
                                 TextChangedForwarded="LabeledTextBox_TextChangedForwarded"/>
        <controls:LabeledTextBox Grid.Row="2" Grid.Column="1"
                                 Label="Secretray Email" Value="{Binding SecretaryEmail}"
                                 Tag="{x:Bind local:Field.SecretaryEmail}"
                                 TextChangedForwarded="LabeledTextBox_TextChangedForwarded"/>

        <!--Row 3:  Notes -->
        <controls:LabeledMultiLinePair Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                       Label="Notes" Value="{Binding Notes}"
                                       Tag="{x:Bind local:Field.Notes}"
                                       TextChangedForwarded="LabeledTextBox_TextChangedForwarded"/>
    </Grid>
</Page>
