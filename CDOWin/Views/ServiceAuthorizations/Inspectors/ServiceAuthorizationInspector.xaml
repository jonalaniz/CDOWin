<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CDOWin.Views.ServiceAuthorizations.Inspectors.ServiceAuthorizationInspector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CDOWin.Views.ServiceAuthorizations.Inspectors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:CDOWin.ViewModels"
    xmlns:control="using:CDOWin.Controls"
    d:DataContext="{d:DesignInstance Type=viewmodels:ServiceAuthorizationsViewModel}"
    mc:Ignorable="d">

    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Style="{StaticResource InspectorHeaderStyle}"
                   Text="{Binding Selected.client.name}"/>

        <!-- Edit Button -->
        <Button Grid.Row="0" Grid.Column="1" VerticalAlignment="Top" 
                Style="{StaticResource SingleIconButtonStyle}">
            <FontIcon Glyph="&#xE70F;" Style="{StaticResource SingleIconFontStyle}"/>
        </Button>

        <!-- Details Caption -->
        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                   Style="{StaticResource InspectorCaptionStyle}" Text="Details"/>

        <!-- Detials Grid -->
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
              Style="{StaticResource InspectorDetialsGridStyle}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Row 0: PO Number + Case ID-->
            <control:LabelPair Grid.Row="0" Grid.Column="0" Label="SA Number" Value="{Binding Selected.id}"/>
            <control:LabelPair Grid.Row="0" Grid.Column="1" Label="Case ID" Value="{Binding Selected.client.caseID}"/>

            <!-- Row 1: Counselor -->
            <control:LabelPair Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                               Label="Issued By" Value="{Binding Selected.client.counselorReference.name}"/>

            <!-- Row 2: Counselor -->
            <control:LabelPair Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                               Label="Office" Value="{Binding Selected.office}"/>
            
            <!-- Row 3: Start Date + End Date -->
            <control:LabelPair Grid.Row="3" Grid.Column="0" Label="Start Date" Value="{Binding Selected.formattedStartDate}"/>
            <control:LabelPair Grid.Row="3" Grid.Column="1" Label="End Date" Value="{Binding Selected.formattedEndDate}"/>

            <!-- Row 4: Unit Cost -->
            <control:LabelPair Grid.Row="4" Grid.Column="0"
                               Label="Unit Cost" Value="{Binding Selected.formattedCost}"/>
            <control:LabelPair Grid.Row="4" Grid.Column="1"
                               Label="U/M" Value="{Binding Selected.unitOfMeasurement}"/>
            <!-- Row 5: Description -->
            <control:LabelPair Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                               Label="Description" Value="{Binding Selected.description}"/>
        </Grid>

        <!-- Row 5: Button Row -->
        <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
              Style="{StaticResource InspectorButtonGridStyle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Style="{StaticResource InspectorAccentStyle}">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <SymbolIcon Symbol="Page"/>
                    <TextBlock Text="Invoice"/>
                </StackPanel>
            </Button>

            <Button Grid.Column="1" Style="{StaticResource InspectorCriticalStyle}">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <SymbolIcon Symbol="Delete"/>
                    <TextBlock Text="Delete"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Page>
