<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CDOWin.Views.Counselors.Dialogs.UpdateCounselor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CDOWin.Controls"
    xmlns:models="using:CDO.Core.Models"
    xmlns:dialogs="using:CDOWin.Views.Clients.Dialogs"
    d:DataContext="{d:DesignInstance Type=models:Counselor}"
    mc:Ignorable="d">

    <Grid Width="480" RowSpacing="10" ColumnSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Row 0: Name -->
        <controls:LabeledTextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                 Label="Name" Value="{Binding name}"/>

        <!-- Row 1: Email -->
        <controls:LabeledTextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                 Label="Email" Value="{Binding email}"/>

        <!-- Row 2: Phone + Fax -->
        <controls:LabeledTextBox Grid.Row="2" Grid.Column="0" Label="Phone" Value="{Binding phone}"/>
        <controls:LabeledTextBox Grid.Row="2" Grid.Column="2" Label="Fax" Value="{Binding fax}"/>

        <!--Row 3:  Notes -->
        <controls:LabeledMultiLinePair Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                       Label="Notes" Value="{Binding notes}"/>

        <!-- Row 4: Secretary -->
        <controls:LabeledTextBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                                 Label="Secretary" Value="{Binding secretaryName}"/>

        <!-- Row 5: Secretary Email-->
        <controls:LabeledTextBox Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" 
                                 Label="Secretray Email" Value="{Binding secretaryEmail}"/>

    </Grid>
</Page>
