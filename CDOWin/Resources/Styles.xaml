<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Basic Card Container Border Style -->
    <Style x:Key="BasicCardBorderStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="BorderBrush" Value="{ThemeResource DividerStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
    </Style>

    <!-- Label Text Block Style -->
    <Style x:Key="LabelTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,0,0,1"/>
    </Style>

    <!-- Value Text Block Style -->
    <Style x:Key="ValueTextBlockStyle" TargetType="TextBlock">
        <Setter Property="TextWrapping" Value="WrapWholeWords"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
    </Style>

    <!-- Left Checkbox Style -->
    <Style x:Key="LeftCheckboxStyle" TargetType="CheckBox">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
    </Style>

    <!-- Right Checkbox Style -->
    <Style x:Key="RightCheckboxStyle" TargetType="CheckBox">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
    </Style>
    
    <!-- Multi-Line TextBox (Notes, etc.) -->
    <Style x:Key="MultiLineCheckboxStyle" TargetType="TextBox">
        <Setter Property="AcceptsReturn" Value="True"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>
    
    <!-- Page Title Style -->
    <Style x:Key="PageTitleStyle" TargetType="TextBlock">
        <Setter Property="Margin" Value="16,10,16,0"/>
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <!-- Inspector Header Style -->
    <Style x:Key="InspectorHeaderStyle" TargetType="TextBlock">
        <Setter Property="Margin" Value="16,10,8,7"/>
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="TextWrapping" Value="WrapWholeWords"/>
    </Style>
    
    <!-- Inspector Caption Style -->
    <Style x:Key="InspectorCaptionStyle" TargetType="TextBlock" BasedOn="{StaticResource CaptionTextBlockStyle}">
        <Setter Property="Margin" Value="16,8,8,8"/>
    </Style>
    
    <!-- Inspector Accent Button Style -->
    <Style x:Key="InspectorAccentStyle" TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>
    
    <!-- Inspector Critical Button Style -->
    <Style x:Key="InspectorCriticalStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Foreground" Value="{StaticResource SystemFillColorCritical}"/>
    </Style>

    <!-- Page Subtitle Style -->
    <Style x:Key="PageSubtitleStyle" TargetType="TextBlock">
        <Setter Property="Margin" Value="16,0,16,8"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
    </Style>

    <!-- Single Icon Button Style -->
    <Style x:Key="SingleIconButtonStyle" TargetType="Button" BasedOn="{StaticResource SubtleButtonStyle}">
        <Setter Property="Margin" Value="16,8,12,0"/>
        <Setter Property="Width" Value="36"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="Padding" Value="0"/>
    </Style>
    
    <!-- Single Icon Font Style -->
    <Style x:Key="SingleIconFontStyle" TargetType="FontIcon">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="{ThemeResource AccentAAFillColorDefaultBrush}"/>
    </Style>
    
    <!-- DataTable (Grid) Header Style-->
    <Style x:Key="DataTableHeaderStyle" TargetType="Grid">
        <Setter Property="Background" Value="{ThemeResource SolidBackgroundFillColorTertiaryBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource DividerStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="16,8"/>
    </Style>
    
    <!-- DataTable Style -->
    <Style x:Key="DataTableStyle" TargetType="ListView">
        <Setter Property="IsItemClickEnabled" Value="True"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="ScrollViewer.HorizontalScrollMode" Value="Auto"/>
        <Setter Property="ScrollViewer.IsHorizontalRailEnabled" Value="True"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="ScrollViewer.VerticalScrollMode" Value="Auto"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="ItemContainerStyle" Value="{StaticResource DataTableItemStyle}"/>
    </Style>
    
    <!-- DataTable Item Style -->
    <Style x:Key="DataTableItemStyle" TargetType="ListViewItem" BasedOn="{StaticResource DefaultListViewItemStyle}">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Padding" Value="4"/>
    </Style>

    <Style x:Key="InspectorListViewStyle" TargetType="ListView">
        <Setter Property="Margin" Value="0,0,0,8"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{ThemeResource DividerStrokeColorDefaultBrush}"/>
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorSecondary}"/>
    </Style>
</ResourceDictionary>
