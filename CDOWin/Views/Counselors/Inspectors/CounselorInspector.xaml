<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CDOWin.Views.Counselors.Inspectors.CounselorInspector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CDOWin.Views.Counselors.Inspectors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dto="using:CDO.Core.DTOs.SAs"
    xmlns:control="using:CDOWin.Controls"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Grid.Column="0"
                   Style="{StaticResource PageTitleStyle}"
                   Text="Details"/>

        <!-- CommandBar -->
        <CommandBar Grid.Row="0" Grid.Column="1" DefaultLabelPosition="Collapsed" Background="Transparent">
            <AppBarButton Click="EditButton_Click" IsCompact="False" ToolTipService.ToolTip="Edit">
                <FontIcon Glyph="&#xE70F;" Style="{StaticResource SingleIconFontStyle}"/>
            </AppBarButton>
        </CommandBar>

        <!-- Details Grid -->
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
              Style="{StaticResource InspectorDetialsGridStyle}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Row 2: Phone + Fax -->
            <control:LabelPair Grid.Row="0" Grid.Column="0" Label="ACE ID" Value="{x:Bind ViewModel.Selected.Id, Mode=OneWay}"/>
            <control:LabelPair Grid.Row="0" Grid.Column="1" Label="Case Load" Value="{x:Bind ViewModel.Selected.CaseLoadId, Mode=OneWay}"/>
            
            <!-- Row 1: Email -->
            <control:LabelPair Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Label="Email" 
                               Value="{x:Bind ViewModel.Selected.Email, Mode=OneWay}"/>

            <!-- Row 2: Phone + Fax -->
            <control:LabelPair Grid.Row="2" Grid.Column="0" Label="Phone" Value="{x:Bind ViewModel.Selected.Phone, Mode=OneWay}"/>
            <control:LabelPair Grid.Row="2" Grid.Column="1" Label="Fax" Value="{x:Bind ViewModel.Selected.Fax, Mode=OneWay}"/>

            <!-- Row 3: Secretary -->
            <control:LabelPair Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Label="Secretary" 
                               Value="{x:Bind ViewModel.Selected.SecretaryName, Mode=OneWay}"/>

            <!-- Row 4: Secretary -->
            <control:LabelPair Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Label="Secretary Email" 
                               Value="{x:Bind ViewModel.Selected.SecretaryEmail, Mode=OneWay}"/>

            <!-- Row 5: Notes -->
            <control:LabelPair Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Label="Notes" 
                               Value="{x:Bind ViewModel.Selected.Notes, Mode=OneWay}"/>
        </Grid>

        <!-- Counselor Caption-->
        <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="16,4,16,8"
                   Style="{StaticResource InspectorCaptionStyle}" Text="Service Authorizations"/>

        <!-- Item Repeater -->
        <ScrollViewer Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="12,0,12,0">
            <ItemsRepeater ItemsSource="{x:Bind ViewModel.Selected.Invoices, Mode=OneWay}">
                <DataTemplate x:DataType="dto:InvoiceDetail">

                    <!-- Button -->
                    <Button Margin="0,0,0,6" Padding="10,6" Click="SA_Click" Tag="{x:Bind Id}"
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}">
                        <StackPanel Spacing="2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" FontWeight="Bold" Text="{x:Bind ClientName}"/>
                                <TextBlock Grid.Column="1" Text="{x:Bind ServiceAuthorizationNumber}"/>
                            </Grid>
                            <TextBlock Text="{x:Bind Description}"/>
                            <TextBlock Text="{x:Bind FormattedDateRange}"/>
                        </StackPanel>
                    </Button>
                </DataTemplate>
            </ItemsRepeater>
        </ScrollViewer>
    </Grid>
</Page>
